---
import Default from '@astrojs/starlight/components/SocialIcons.astro'
---

<!-- Custom website link with globe icon (add this wherever you want it in the list) -->
<a href="https://islanddao.org" rel="me" class="sl-flex">
  <!-- Replace with your actual website URL -->
  <span class="sr-only">Website</span>
  <svg
    aria-hidden="true"
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    height="18"
    width="18"
    viewBox="0 0 24 24"
  >
    <circle cx="12" cy="12" r="10"></circle>
    <path d="M12 2a14.5 14.5 0 0 0 0 20a14.5 14.5 0 0 0 0-20M2 12h20"></path>
  </svg>
</a>

<!-- Render all your default social links from astro.config.mjs -->
<Default {...Astro.props} />

<style>
  a {
    color: var(--sl-color-text-accent);
    margin: -0.5em;
    padding: 0.5em;
  }
  a:hover {
    opacity: 0.66;
  }
</style>
